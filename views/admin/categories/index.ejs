<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a href="">
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
            <tr>
                <th><%= category.id  %></th>
                <th><%= category.title %></th>
                <th><%= category.slug %></th>
                <th>
                    <a href="/admin/categories/edit/<%= category.id  %>" class="btn btn-warning">Editar</a>
                    <form action="/categories/delete" method="POST" onsubmit="confirmDelete(event, this)" style="display: inline;">
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                    
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function confirmDelete(event, form) {
        event.preventDefault()
        let decision = confirm('Deseja realmente deletar está categoria?')
        if(decision) {
            form.submit()
        }
    }
</script>

<%- include('../../partials/footer') %>
