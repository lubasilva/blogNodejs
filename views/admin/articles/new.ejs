<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form action="/categories/save" method="POST">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do Artigo"> <br>
                <textarea name="bodyInfo" id="article" cols="30" rows="10" class="form-control" placeholder="Escreva o artigo aqui!"></textarea>
                <br>
                <label class="">Categorias</label>
                <select name="category" class="form-select">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                   <% }) %>
                </select>
                <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
           
        </div>
    </div>
</div>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>
<%- include('../../partials/footer') %>
